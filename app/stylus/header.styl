.header
    position: relative
    box-sizing: border-box
    height 0
    padding-top 56.06%
    opacity: 0;
    transition: opacity 1s;
    .headerMenu
        position absolute
        display: flex
        flex-direction: row
        justify-content: space-between
        align-items: center
        width: 60%
        top 10px
        left 20%
        margin-top: 20px
        .mainMenu
            list-style: none
            text-transform: uppercase
            display flex
            flex-direction: row
            justify-content: space-between
            align-items: center
            font-size: 12px
            margin 0
            min-height: 60px
            .mainMenuItem
                margin-left 20px
                box-sizing: border-box
                cursor pointer
                opacity 0.6
            .mainMenuItem:hover 
                opacity: 1
            .smallButton
                color: #ffffff
                background-color #000000
                padding: 10px 15px
                position: relative
                opacity: 1
        .menuDrop
            position: absolute
            top 80%
            right 0
            background-color: #000000
            list-style: none
            padding: 20px
            min-width 100px
            display none
            &.active
                display block
            .dropMenuItem
                color: #ffffff
                opacity 0.6
                text-transform: uppercase
                font-size: 12px
                margin-bottom: 10px
                cursor pointer
            .dropMenuItem:hover 
                opacity: 1
    .layer
        position: absolute
        width 100%
        top 0
        left 0
        z-index: -1
    .headerText
        position: absolute
        left 20%
        top 50%
        text-transform: uppercase            
        font-family: Montserrat
        margin-top -101px
        width: 40%
        .headerText1
            font-size: 72px
            margin: 0
        .headerText2
            font-size: 12px
            margin: 0
