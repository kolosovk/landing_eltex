.iPhoneWrap
    position relative
    background-color: #26e6e6
    opacity: 0;
    transition: opacity 1s;
    .iPhone
        position relative
        display: flex
        align-items: center
        width 80%
        margin 0 auto
        min-height 800px
        height: 1px
        .sliderBox
            position relative
            width: 70%
            height 100%
            left 10%
            display flex
            align-items: center
            .iPhonePic
                position absolute
                width: 100%
                height 80%
                top 10%
            .w3-content
                width 400px
                transform: rotate(-45deg)
                .mySlides
                    margin: 0 auto
        .block
            position relative
            background-color #ffffff
            font-family: Montserrat
            margin: 5% 0
            width 30%
            padding 30px
            .blockItem
                display flex
                margin 20px 0
                .blockItemContent
                    margin-left 10px
                    .blockItemName
                        font-size: 18px
                        margin-top 0
                    .blockItemtext
                        font-size: 14px
            .blockButton
                border: none 
                color #ffffff
                background-color #000000
                width 100%
                cursor pointer
                padding 10px
                position absolute
                bottom 0
                left 0
                width 100%
