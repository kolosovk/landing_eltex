.iPad
    position relative
    width 100%
    opacity: 0;
    transition: opacity 1s;
    .iPadWrap
        position relative
        width 80%
        margin 0 auto
        background-color #000000
        .content
            color #ffffff
            min-height 600px
            display flex
            flex-direction: column
            justify-content: space-around
            align-items: flex-start
            width 40%
            margin-left 10%
            .iPadHead
                font-size: 72px
                opacity 0.8
                font-weight: 200
            .iPadText
                opacity 0.8
                font-weight: 400
        .iPadButton
            background-color #26e6e6
            border: none 
            border-radius: 20px
            color #000000
            padding 10px 20px
            text-transform: uppercase
            cursor pointer
    .image
        position: absolute
        top 40%
        right 0
        display: flex
        align-items: center
        justify-content: flex-end
        width: 50%
        img
            max-height: 600px


