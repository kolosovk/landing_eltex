.platform
    display: flex
    flex-direction: column
    justify-content: space-around
    align-items: center
    width: 60%
    margin: 300px auto 100px auto
    opacity: 0;
    transition: opacity 1s;
    .platformHead
        text-transform: uppercase
        font-size: 12px
        font-weight: bold
    .platformText
        width 70%
        text-align: center
        font-size 18px
    .block
        position relative
        background-color #ffffff
        margin: 5% 0
        display flex
        flex-wrap: wrap
        justify-content: space-around
        .blockItem
            display flex
            flex-basis: 30%
            .blockItemContent
                margin-left: 20px
                .blockItemName
                    font-size: 18px
                    font-weight: bold
                    margin 0
                .blockItemtext
                    font-size: 14px
                    opacity 0.8
