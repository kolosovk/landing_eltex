.platform
    margin-top: 200px
    display: flex
    flex-direction: column
    justify-content: space-around
    align-items: center
    width: 80%
    opacity: 0;
    transition: opacity 1s;
    .block
        position relative
        background-color #ffffff
        margin: 5% 0
        display flex
        flex-wrap: wrap
        justify-content: space-around
        .blockItem
            display flex
            flex-basis: 30%
            .blockItemName
                font-size: 18px
            .blockItemtext
                font-size: 14px
